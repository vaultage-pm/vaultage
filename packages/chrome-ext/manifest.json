{
    "name": "Vaultage",
    "description" : "Official Vaultage extension for Google Chrome",
    "version": "1.0",
    "manifest_version": 2,
    "icons": { 
        "16": "icon.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [ "dist/vaultage.js", "dist/background.js" ]
    },
    "commands": {
        "fill": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Fill with password"
        }
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "all_frames": true,
            "js": ["dist/content.js"]
        }
    ]
}
